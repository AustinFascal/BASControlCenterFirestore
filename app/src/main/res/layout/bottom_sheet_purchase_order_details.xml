<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetPODetails"
    android:background="@color/white"
    android:paddingBottom="32dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <!--
    app:behavior_peekHeight="?android:actionBarSize"
-->


    <RelativeLayout
        android:id="@+id/wrapTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingVertical="18dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pratinjau Rincian PO"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvPoPtBasNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="poptbasnumber"
                android:textColor="@color/dark_green"
                android:ellipsize="end"
                android:textStyle="bold"
                android:maxLines="1"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivCloseBottomSheetDetail"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_outline_edit"
            app:tint="#F44336" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toBottomOf="@id/wrapTitle" />
    <LinearLayout
        android:id="@+id/wrapContent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:divider="@drawable/divider_transparent"
        android:showDividers="middle"
        android:paddingHorizontal="24dp"
        android:paddingVertical="18dp"
        app:layout_constraintTop_toTopOf="@id/divider1">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tanggal"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_column="2"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvPoDate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="date"
                    android:layout_column="3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T.O.P"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_column="2"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvPoTOP"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="date"
                    android:layout_column="3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipe Transport"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_column="2"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvPoTransportType"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="type"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Customer"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_column="2"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvPoCustomerName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="customername"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nomor PO Customer"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_column="2"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvPoCustomerNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="customerponumber"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mata Uang"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_column="2"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvPoCurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="currency"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:layout_column="3"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:background="@drawable/table_border"
                android:layout_width="0dp">
                <TextView
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="No."
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Nama Item"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Qty"
                    android:layout_column="2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Beli"
                    android:layout_column="3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:padding="2dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Total Jual"
                    android:layout_column="4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_weight="2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </TableRow>

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/rvItems"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>


        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal Beli"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
<!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_column="2"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>
-->
                <TextView
                    android:id="@+id/tvSubTotalBuy"
                    android:textAlignment="textEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_column="3"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal Jual"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_column="2"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>-->
                <TextView
                    android:id="@+id/tvSubTotalSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_column="3"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </TableRow>

            <TableRow
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PPN 11%"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:layout_column="2"
                    android:textSize="14sp"
                    android:paddingHorizontal="10dp"
                    android:textColor="@color/black"/>-->
                <TextView
                    android:id="@+id/tvTotalVAT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_column="3"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/pure_red"/>
            </TableRow>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_grey" />

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Jual"
                    android:layout_column="1"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvTotalSellFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_column="3"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </TableRow>
            <TableRow
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Est. Profit\n(Subtotal Jual-Beli)"
                    android:layout_column="1"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvEstProfit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="text"
                    android:layout_column="3"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:textColor="@color/dark_green"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>