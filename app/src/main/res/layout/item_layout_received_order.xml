<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:id="@+id/cardView"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:paddingHorizontal="12dp"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/cbSelectItem"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_inv_date_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="12/12/2022" />

                <TextView
                    android:id="@+id/tv_ro_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Nomor RO UID"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_po_cust_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Nomor PO Customer"
                    android:textSize="14sp" />


                <LinearLayout
                    android:id="@+id/ll_wrap_gi_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <LinearLayout
                        android:id="@+id/ll_status_approved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/pill_green"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VALID"
                            android:textColor="@color/dark_green"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_status_po_unvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/pill_red"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NOMOR PO BELUM TERSEDIA"
                            android:textColor="@color/dark_red"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <CheckBox
                android:id="@+id/cbSelectItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/llHiddenView"
            android:animateLayoutChanges="true"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/btn_delete_inv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_delete_forever"
                    android:layout_alignStart="@+id/btn1"
                    android:layout_alignEnd="@+id/btn1"
                    android:layout_alignTop="@+id/btn1"
                    android:layout_alignBottom="@+id/btn1"
                    app:tint="?colorPrimary" />

                <Button
                    android:id="@+id/btn1"
                    style="@style/MaterialDialog.NegativeButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:tag="DeleteGI" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btnShowDetail"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:scaleType="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_outline_info"
                    android:layout_alignStart="@+id/btn3"
                    android:layout_alignEnd="@+id/btn3"
                    android:layout_alignTop="@+id/btn3"
                    android:layout_alignBottom="@+id/btn3"
                    app:tint="?colorPrimary"/>

                <Button
                    android:id="@+id/btn3"
                    style="@style/MaterialDialog.NegativeButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_approve_inv"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <Button
                    android:id="@+id/btn2"
                    style="@style/MaterialDialog.PositiveButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/btn2"
                    android:layout_alignTop="@+id/btn2"
                    android:layout_alignEnd="@+id/btn2"
                    android:layout_alignBottom="@+id/btn2"
                    android:scaleType="center"
                    android:src="@drawable/ic_outline_verified"
                    app:tint="@color/white" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>