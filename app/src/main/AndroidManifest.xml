            android:name="com.ptbas.controlcenter.userprofile.ForgotPasswordActivity"
            android:exported="false" />
        <activity
            android:name="com.ptbas.controlcenter.userprofile.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.ptbas.controlcenter.auth.RegisterActivity"
            android:exported="false" />
        <activity
            android:name="com.ptbas.controlcenter.auth.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.ptbas.controlcenter.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>