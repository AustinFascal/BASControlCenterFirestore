<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout"
    tools:context=".management.ReceivedOrderManagementActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_marginTop="-8dp"
            android:id="@+id/cdv_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:visibility="gone"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/divider_transparent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingTop="18dp"
                android:showDividers="middle">

                <LinearLayout
                    android:id="@+id/wrap_search_by_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:showDividers="middle"
                    android:visibility="gone">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:placeholderText="Pilih Kategori">

                        <AutoCompleteTextView
                            android:id="@+id/spinner_search_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/search_by"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageButton
                        android:id="@+id/btn_gi_search_by_type_reset"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="3.8"
                        android:background="@drawable/outline_box"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_outline_restore"
                        android:visibility="gone"
                        android:contentDescription="@string/default_content_description" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wrap_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_transparent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:showDividers="middle"
                    android:visibility="visible">

                    <com.ptbas.controlcenter.DragLinearLayout
                        android:id="@+id/drag_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider_transparent"
                        android:orientation="vertical"
                        android:showDividers="middle">

                        <LinearLayout
                            android:id="@+id/ll_wrap_filter_by_date_range"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/divider_transparent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:tag="firstView">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_outline_drag_indicator" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:startIconDrawable="@drawable/ic_outline_today">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_gi_date_filter_start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="Mulai"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:startIconDrawable="@drawable/ic_outline_today">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_gi_date_filter_end"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="Akhir"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageButton
                                android:id="@+id/btn_gi_search_date_reset"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="1dp"
                                android:layout_weight="1.3"
                                android:background="@drawable/outline_box"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_outline_restore"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wrap_filter_by_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/divider_transparent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_outline_drag_indicator" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <AutoCompleteTextView
                                    android:id="@+id/spinner_approval_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Status Disahkan"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <AutoCompleteTextView
                                    android:id="@+id/spinner_mat_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Tipe Material"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageButton
                                android:id="@+id/btn_gi_search_status_reset"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="1dp"
                                android:layout_weight="1.3"
                                android:background="@drawable/outline_box"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_outline_restore"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_wrap_filter_by_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/divider_transparent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_outline_drag_indicator" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <AutoCompleteTextView
                                    android:id="@+id/spinner_company_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:hint="Perusahaan"
                                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNM1234567890-, "
                                    android:inputType="textFilter|textCapCharacters" />
                            </com.google.android.material.textfield.TextInputLayout>


                            <ImageButton
                                android:id="@+id/btn_gi_search_company_reset"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="1dp"
                                android:layout_weight="1.3"
                                android:background="@drawable/outline_box"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_outline_restore"
                                android:visibility="gone" />

                        </LinearLayout>

                    </com.ptbas.controlcenter.DragLinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/imgbtn_expand_collapse_filter_layout"
                    style="@style/MaterialDialog.NegativeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:drawableEnd="@drawable/ic_outline_keyboard_arrow_up"
                    android:paddingTop="4dp"
                    android:text="Tampilkan lebih sedikit"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_no_data"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cdv_filter"
            android:orientation="vertical">
            <com.airbnb.lottie.LottieAnimationView
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lottie_data_not_found"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <TextView
                android:layout_marginTop="10dp"
                style="@style/TextAppearance.AppCompat.Title"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data tidak ditemukan"/>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cdv_filter">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_received_order_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="80dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_layout_good_issue" />

            <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="18dp"
            android:visibility="visible">



        </LinearLayout>-->

        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fab_expand_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="12dp"
        app:fab_addButtonColorNormal="@color/blue_700"
        app:fab_addButtonColorPressed="@color/blue_500"
        app:fab_labelStyle="@style/customFAB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action_archived_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/light_grey"
            app:fab_icon="@drawable/ic_recap_data"
            app:fab_title="Data RO Diarsipkan" />
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_action_create_ro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/white"
            app:fab_colorPressed="@color/light_grey"
            app:fab_icon="@drawable/ic_add_received_order"
            app:fab_title="Buat Received Order" />
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</androidx.coordinatorlayout.widget.CoordinatorLayout>