        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelPermitBAS"
        tools:targetApi="31">
        <activity
            android:theme="@style/Theme.TravelPermitBAS.NoActionBar"
            android:name="com.ptbas.controlcenter.DashboardActivity"
            android:exported="false" />
        <activity
            android:name="com.ptbas.controlcenter.AddPurchaseOrderActivity"
            android:exported="false" />
        <activity
            android:name="com.ptbas.controlcenter.AddGoodIssueActivity"
            android:exported="false" />
        <activity
            android:name="com.ptbas.controlcenter.AddVehicleActivity"
