<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create.AddBkkActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="-8dp"
            android:id="@+id/cdv_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:visibility="visible"
            style="@style/Widget.MaterialComponents.CardView"
            app:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingTop="18dp">

                <LinearLayout
                    android:id="@+id/wrap_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">
                    <com.ptbas.controlcenter.helper.DragLinearLayout
                        android:id="@+id/drag_linear_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@drawable/divider_transparent"
                        android:orientation="vertical"
                        android:showDividers="middle">

                        <LinearLayout
                            android:id="@+id/ll_wrap_filter_by_date_range"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/divider_transparent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" android:showDividers="middle"
                            android:tag="firstView">
                            <ImageView
                                app:tint="?colorPrimary"
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_outline_drag_indicator" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:startIconDrawable="@drawable/ic_outline_today">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_gi_date_filter_start"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="Mulai"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:startIconDrawable="@drawable/ic_outline_today">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/edt_gi_date_filter_end"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="Akhir"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <ImageButton
                                android:id="@+id/btn_gi_search_date_reset"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginBottom="1dp"
                                android:layout_weight="1.3"
                                android:background="@drawable/outline_box"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_outline_restore"
                                android:visibility="gone" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_wrap_filter_by_rouid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@drawable/divider_transparent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:showDividers="middle"
                            android:visibility="visible">
                            <ImageView
                                app:tint="?colorPrimary"
                                android:layout_width="24dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_outline_drag_indicator" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    app:placeholderText="Pilih Kategori">

                                    <AutoCompleteTextView
                                        android:id="@+id/rouid"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="ID Received Order" />
                                </com.google.android.material.textfield.TextInputLayout>

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginTop="5dp"
                                    app:placeholderText="Pilih Kategori">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/pouid"
                                        android:maxLines="1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="ID Nomor PO Customer"
                                        android:focusable="false"
                                        android:inputType="none"/>
                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>


                            <ImageButton
                                android:id="@+id/btn_gi_search_rouid_reset"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="1dp"
                                android:layout_weight="3"
                                android:background="@drawable/outline_box"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_outline_restore"
                                android:visibility="gone" />

                        </LinearLayout>
                    </com.ptbas.controlcenter.helper.DragLinearLayout>
                    <Button
                        android:id="@+id/caridata"
                        style="@style/MaterialDialog.NegativeButton"
                        android:text="CARI DATA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <Button
                    android:id="@+id/imgbtn_expand_collapse_filter_layout"
                    style="@style/MaterialDialog.NegativeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:drawableEnd="@drawable/ic_outline_keyboard_arrow_up"
                    android:paddingTop="4dp"
                    android:drawableTint="?colorPrimary"
                    android:text="Tampilkan lebih sedikit"
                    android:visibility="visible" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:gravity="center"
            android:id="@+id/ll_no_data"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cdv_filter"
            android:orientation="vertical">
            <com.airbnb.lottie.LottieAnimationView
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lottie_data_not_found"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
            <TextView
                android:layout_marginTop="10dp"
                style="@style/TextAppearance.AppCompat.Title"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data tidak ditemukan"/>
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:visibility="visible"
            android:id="@+id/nestedScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cdv_filter">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_good_issue_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="80dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_layout_good_issue" />
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_create_gi_recap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_outline_add_circle"
        app:iconTint="@color/white"
        android:layout_alignParentEnd="true"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="14dp"
        android:maxLines="2"
        android:text="BUAT INVOICE"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>