<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/open_detail"
            android:paddingHorizontal="12dp"
            android:paddingBottom="6dp"
            android:paddingTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/iv_show_detail"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_inv_date_created"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="12/12/2022" />

                <TextView
                    android:id="@+id/tv_inv_uid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Nomor Invoice UID"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_po_cust_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Nomor PO Customer"
                    android:textSize="14sp" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_show_detail"
                style="@style/Widget.Design.FloatingActionButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_outline_navigate_next"
                app:tint="@color/white" />

            <LinearLayout
                android:id="@+id/ll_status_approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_show_detail"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/pill_green"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LUNAS"
                    android:textSize="11sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="4dp"
            android:orientation="horizontal">
            <Button
                android:tag="DeleteGI"
                style="@style/MaterialDialog.NegativeButton"
                android:id="@+id/btn_delete_inv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:drawableLeft="@drawable/ic_outline_delete_forever"
                android:text="HAPUS"
                android:textAllCaps="true" />
            <Button
                style="@style/MaterialDialog.NegativeButton"
                android:id="@+id/btn_print_inv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:drawableLeft="@drawable/ic_outline_print"
                android:text="CETAK"
                android:textAllCaps="true" />
            <Button
                style="@style/MaterialDialog.NegativeButton"
                android:id="@+id/btn_approve_inv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_outline_check"
                android:text="LUNAS"
                android:textAllCaps="true" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>